<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="textColor" format="color" />
    <attr name="textSize" format="dimension" />


    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundWidth" format="dimension" />
        <attr name="textColor" />
         <attr name="textSize" />
        <attr name="max" format="integer" />
        <attr name="textIsDisplayable" format="boolean" />
        <attr name="style">
            <enum name="STROKE" value="0" />
            <enum name="FILL" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LabelView">
        <attr name="text" format="string" />
        <attr name="textColor" />
        <attr name="textSize" />
    </declare-styleable>

    <declare-styleable name="MagicProgressBar">
        <attr name="mpb_percent" format="float" />
        <attr name="mpb_color" format="color" />
        <attr name="mpb_default_color" format="color" />
    </declare-styleable>

    <declare-styleable name="RangeGraph">
        <attr name="color_neutral" format="float" />
        <attr name="color_out_range" format="color" />
        <attr name="color_in_range" format="color" />
        <attr name="num_min" format="integer" />
        <attr name="num_max" format="integer" />
    </declare-styleable>

</resources>